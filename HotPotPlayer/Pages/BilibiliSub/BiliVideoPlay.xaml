<base:PageBase
    x:Class="HotPotPlayer.Pages.BilibiliSub.BiliVideoPlay"
    xmlns:base="using:HotPotPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HotPotPlayer.Pages.BiliBiliSub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:video="using:HotPotPlayer.Video"
    xmlns:cont2="using:HotPotPlayer.UI.Controls"
    xmlns:cont3="using:HotPotPlayer.Controls.BilibiliSub"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="{x:Bind GetCommentWidth(IsFullPage)}" />
        </Grid.ColumnDefinitions>

        <Grid Background="#f9f9fb" Padding="{x:Bind GetRootPadding(IsFullPage)}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="{x:Bind GetTitleHeight(IsFullPage)}" />
                <RowDefinition Height="{x:Bind GetTitleHeight(IsFullPage)}" />
                <RowDefinition Height="{x:Bind GetTitleHeight(IsFullPage)}" />
                <RowDefinition Height="{x:Bind GetTitleHeight(IsFullPage)}" />
            </Grid.RowDefinitions>
            <video:VideoControl x:Name="VideoPlayer" Source="{x:Bind Source}" DmData="{x:Bind DmData}" OnToggleFullScreen="OnToggleFullScreen" OnToggleFullPage="OnToggleFullPage" IsFullPage="{x:Bind IsFullPage}" IsFullPageHost="False" OnMediaLoaded="OnMediaLoaded"/>

            <!--<ProgressRing Visibility="{x:Bind IsLoading}" ui:VisualExtensions.NormalizedCenterPoint="0.5">
                <animations:Implicit.ShowAnimations>
                    <animations:ScaleAnimation From="1" To="2" Duration="0:0:0.3"/>
                    <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.3" />
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:ScaleAnimation From="2" To="0.8" Duration="0:0:0.3"/>
                    <animations:OpacityAnimation From="1" To="0" Duration="0:0:0.3" />
                </animations:Implicit.HideAnimations>
            </ProgressRing>-->

            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Video.Title}" FontSize="28" FontFamily="{ThemeResource MiSansMedium}" MaxLines="2" TextWrapping="Wrap" IsTextSelectionEnabled="True" TextTrimming="CharacterEllipsis"/>
                <Rectangle Grid.Column="1" Width="230"/>
            </Grid>
            <StackPanel x:Name="ThreeButton" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,16,0,0" Orientation="Horizontal" Spacing="8">
                <ToggleButton Padding="8,0" CornerRadius="4" Style="{StaticResource BiliToggleButton}" VerticalAlignment="Top" Click="LikeClick" IsChecked="{x:Bind IsLike}">
                    <StackPanel Spacing="4" Padding="0,4">
                        <FontIcon FontFamily="{ThemeResource BiliIcons}" Glyph="&#xEA09;" FontSize="22"/>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind Video.Stat.GetLike()}" FontFamily="{ThemeResource MiSansRegular}" />
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="CoinToggleButton" Padding="8,0" CornerRadius="4" Style="{StaticResource BiliToggleButton}" VerticalAlignment="Top" IsChecked="{x:Bind GetCoinButtonCheck(Coin), Mode=OneWay}" Click="CoinClick">
                    <StackPanel Spacing="4" Padding="0,4">
                        <PathIcon Data="{StaticResource CoinPath}" HorizontalAlignment="Center" Margin="0,2,0,2"/>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind Video.Stat.GetCoin()}" FontFamily="{ThemeResource MiSansRegular}" />
                    </StackPanel>
                    <ToggleButton.ContextFlyout>
                        <Flyout>
                            <cont3:CoinFlyout CopyRight="{x:Bind Video.CopyRight}" CoinConfirmed="CoinConfirmClick"/>
                        </Flyout>
                    </ToggleButton.ContextFlyout>
                </ToggleButton>
                <ToggleButton Padding="8,0" CornerRadius="4" Style="{StaticResource BiliToggleButton}" VerticalAlignment="Top" IsChecked="{x:Bind IsFavor}" Click="FavorClick">
                    <StackPanel Spacing="4" Padding="0,4" >
                        <FontIcon FontFamily="{ThemeResource BiliIcons}" Glyph="&#xEA03;" FontSize="22"/>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind Video.Stat.GetFavorite()}" FontFamily="{ThemeResource MiSansRegular}" />
                    </StackPanel>
                </ToggleButton>
                <Button Padding="8,0" CornerRadius="4" Style="{StaticResource BiliButton}" VerticalAlignment="Top" Click="ShareClick" >
                    <StackPanel Spacing="4" Padding="0,4">
                        <FontIcon FontFamily="{ThemeResource BiliIcons}" Glyph="&#xEA0D;" FontSize="22"/>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind Video.Stat.GetShare()}" FontFamily="{ThemeResource MiSansRegular}" />
                    </StackPanel>
                    <Button.ContextFlyout>
                        <Flyout>
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="MinWidth" Value="600" />
                                    <Setter Property="CornerRadius" Value="8" />
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <cont3:ShareFlyout x:Name="ShareFl" Video="{x:Bind Video}"/>
                        </Flyout>
                    </Button.ContextFlyout>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
                <cont2:ImageEx2 x:Name="UserAvatar" Source="{x:Bind Video.Up.Face}" Style="{StaticResource LocalMusicImageStyle}" 
                    Width="24" Height="24" Tapped="UserAvatar_Tapped"
                    CornerRadius="16" >
                    <cont2:ImageEx2.ContextFlyout>
                        <Flyout>
                            <cont3:UserCard x:Name="UserAvatarFlyout" Margin="-16" Mid="{x:Bind Video.Up.Mid}" />
                        </Flyout>
                    </cont2:ImageEx2.ContextFlyout>
                </cont2:ImageEx2>

                <TextBlock VerticalAlignment="Center" Margin="8,0" Text="{x:Bind Video.Up.Name}" FontFamily="{ThemeResource MiSansRegular}" FontSize="15" IsTextSelectionEnabled="True"/>
                <ImageIcon Source="ms-appx:///Assets/Icon/View.svg" Margin="12,0,0,0" Width="20" Foreground="Gray"/>
                <TextBlock VerticalAlignment="Center" Margin="4,0" Text="{x:Bind Video.Stat.GetViews()}" Foreground="Gray" FontFamily="{ThemeResource MiSansRegular}" />
                <ImageIcon Source="ms-appx:///Assets/Icon/Dan.svg" Margin="12,0,0,0" Width="20" Foreground="Gray"/>
                <TextBlock VerticalAlignment="Center" Margin="4,0" Text="{x:Bind Video.Stat.GetDanMaku()}" Foreground="Gray" FontFamily="{ThemeResource MiSansRegular}" />
                <ImageIcon Source="ms-appx:///Assets/Icon/Time.svg" Margin="12,0,0,0" Width="20" Foreground="Gray"/>
                <TextBlock VerticalAlignment="Center" Margin="4,0" Text="{x:Bind Video.GetUpDateTime2()}" Foreground="Gray" FontFamily="{ThemeResource MiSansRegular}" />
                <FontIcon FontFamily="{ThemeResource SegoeIcons}" Margin="12,0,0,0" Glyph="&#xE18B;" Foreground="Gray" FontSize="16"/>
                <TextBlock VerticalAlignment="Center" Margin="6,0" Text="{x:Bind OnLineCount}" Foreground="Gray" FontFamily="{ThemeResource MiSansRegular}" />
            </StackPanel>
            <TextBlock Text="{x:Bind Video.VideoDEsc}" Grid.Row="3" IsTextSelectionEnabled="True" FontFamily="{ThemeResource MiSansRegular}" MaxLines="3" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
            <ListView Grid.Row="4" Margin="-36,2,-28,0" Padding="36,0,28,0" Height="220" ItemsSource="{x:Bind RelatedVideos}" Style="{StaticResource HorizontalListViewStyle}" ItemContainerStyle="{StaticResource GeneralListContainerCompactPaddingStyle}" ItemTemplate="{StaticResource BiliVideoCardViewTemplate2}" ItemClick="RelateVideoClick">

            </ListView>
        </Grid>

        <Grid Grid.Column="1" Margin="16,28,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,16" >
                <TextBlock Text="评论" FontSize="18" FontFamily="{ThemeResource MiSansMedium}" />
                <Border CornerRadius="4" Background="#4e4f67" Padding="6,0">
                    <TextBlock Text="{x:Bind Video.Stat.GetReply()}" Foreground="White" FontSize="12" VerticalAlignment="Center" FontFamily="{ThemeResource MiSansMedium}" />
                </Border>
            </StackPanel>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox PlaceholderText="发一条友善的评论" FontFamily="{ThemeResource MiSansRegular}"/>
                <Button Grid.Column="1" Margin="4,0,0,0" Background="#40C5F1" Foreground="White" FontFamily="{ThemeResource MiSansRegular}">
                    发布
                </Button>
            </Grid>
            <ListView 
                Grid.Row="2" 
                Margin="-8,12,-8,0" 
                Padding="8,0" 
                ItemsSource="{x:Bind Replies}" 
                Style="{StaticResource GeneralListViewStyle}" 
                ItemContainerStyle="{StaticResource GeneralListContainerStyle}" 
                ItemTemplate="{StaticResource VideoReplyTemplate}"
                IncrementalLoadingTrigger="Edge"
                IncrementalLoadingThreshold="2"
                >
                
            </ListView>
        </Grid>

    </Grid>
</base:PageBase>
