<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HotPotPlayer.Templates">
    
    <DataTemplate x:Key="GeneralPivotHeaderTemplate">
        <TextBlock 
            Text="{Binding }" 
            FontWeight="Medium" 
            FontFamily="{ThemeResource MiSansRegular}"
            />
    </DataTemplate>

    <DataTemplate x:Key="LyricPivotHeaderTemplate">
        <TextBlock 
            Text="{Binding }" 
            FontSize="24" 
            FontWeight="Medium" 
            FontFamily="{ThemeResource MiSansMedium}"
            />
    </DataTemplate>

</ResourceDictionary>
