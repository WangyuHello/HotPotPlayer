                <TextBlock Margin="12,0" Text="{x:Bind biliext:TimeExtensions.GetDateTime(ViewAt)}" Foreground="Gray" FontFamily="{ThemeResource MiSansRegular}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
